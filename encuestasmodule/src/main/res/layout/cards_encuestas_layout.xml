<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="@string/app_name">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginBody"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/white_light"
        card_view:cardCornerRadius="@dimen/padding">
       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--<ImageView
                android:id="@+id/imgViewEncuesta"
                android:layout_width="1dp"
                android:gravity="center"
                android:tag="image_encuesta"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/ic_list_dark"
                />-->

            <TextView
                android:id="@+id/tvTitulo"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/marginBody"
                android:textColor="@color/gobierno_rojo"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvDescripcion"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/marginBody"
                android:textColor="@color/gobierno_rojo"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnIniciarEncuesta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/iniciar_encuesta"
                android:background="@color/gobierno_rojo"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@color/white_light" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
